<bean id="auditEventListener" class="class_name">
        <constructor-arg ref="dataProvider"/>
        <constructor-arg ref="auditMetamodelProvider"/>
        <constructor-arg ref="auditSender"/>
    </bean>    

    <!-- Следующий bean содержит описание метамодели данных, которые отправляются в подсистему аудита. -->
    <bean id="auditMetamodelProvider" class="class_name">
        <!-- Наименование системы, которая записывает метамодели в аудит. -->
        <constructor-arg>MODULE_ID</constructor-arg>
    </bean>

    <!-- Следующий bean отвечает за отправку данных в подсистему аудита. -->
    <bean id="auditSender" class="class_name">
        <!-- URL, на который отправляются данные. -->
        <constructor-arg name="auditUrl" value="AUDIT_URL"/>
        <!-- Параметры для использования в случае SSL-соединения: -->
        <constructor-arg name="keystorePath" value="/path/to/clientNode-key-and-certificate.jks"/>
        <!-- При наличии интеграции с Конфигуратором используйте value="${SslContextFactory.keyStorePassword}" -->
        <constructor-arg name="keystorePwd" value="123456"/>
        <constructor-arg name="truststorePath" value="/path/to/truststore.jks"/>
        <!-- При наличии интеграции с Конфигуратором используйте value="${SslContextFactory.trustStorePassword}" -->
        <constructor-arg name="truststorePwd" value="123456"/>
        <constructor-arg name="cipherSuites" value="TLS_RSA_WITH_NULL_SHA256"/>
    </bean>