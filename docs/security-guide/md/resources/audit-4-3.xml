<bean id="moduleInfoProvider" class="class_name">
    <constructor-arg name="module" value="IgniteSE"/>
    <constructor-arg name="nodeId" value="#{localhostInetAddress.hostName}"/>
    <constructor-arg name="srcSys" value="IgniteSE"/>
</bean>

<bean id="auditEventListener" class="class_name">
    <constructor-arg ref="dataProvider"/>
    <constructor-arg ref="ignAuditServiceFactory"/>
    <constructor-arg ref="moduleInfoProvider"/>
</bean>

<bean id="props" class="class_name">

    <property name="locations">
        <list>
            <value>path-to-file</value>
        </list>
    </property>
</bean>

<bean id="auditMetamodelSupplier" class="class_name">
    <constructor-arg name="module" value="IgniteSE"/>
</bean>

<bean id="ignAuditServiceFactory" class="class_name">
    <constructor-arg name="metamodelSupplier" ref="auditMetamodelSupplier"/>
    <constructor-arg name="props" ref="props"/>
</bean>